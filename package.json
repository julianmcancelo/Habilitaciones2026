{
  "name": "nueva-carpeta",
  "version": "1.1.0",
  "description": "Sistema de gestión para habilitaciones de transporte del Municipio de Lanús",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox --disable-gpu-sandbox",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "npx electron-builder --publish never --win nsis:x64",
    "pack": "npx electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "api": "npx php-server -S localhost -p 4000 -t ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "php-server": "^0.2.1"
  },
  "build": {
    "appId": "com.transportelanus.habilitaciones",
    "productName": "Habilitaciones Lanus",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": true,
      "installerIcon": "publico/logo.svg"
    },
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "julianmcancelo",
        "repo": "Habilitaciones2026"
      }
    ]
  },
  "dependencies": {
    "axios": "^1.11.0",
    "body-parser": "^2.2.0",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0"
  }
}
