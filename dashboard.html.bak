<script>
    let allHabilitaciones = [];

    // 1. Renderiza la tabla de habilitaciones con un filtro opcional
    function renderHabilitaciones(filter = 'todos') {
        const tableBody = document.getElementById('habilitaciones-table-body');
        tableBody.innerHTML = ''; // Limpiar contenido previo

        const filteredData = allHabilitaciones.filter(h => {
            if (filter === 'todos') return true;
            if (filter === 'escolar') return h.tipo_transporte === 'Escolar';
            if (filter === 'remis') return h.tipo_transporte === 'Remis';
            return false;
        });

        if (filteredData.length > 0) {
            filteredData.forEach(h => {
                const row = document.createElement('tr');
                const now = new Date();
                now.setHours(0, 0, 0, 0);
                const expiryDate = new Date(h.vigencia_fin + 'T00:00:00');
                const thirtyDaysFromNow = new Date();
                thirtyDaysFromNow.setDate(now.getDate() + 30);

                let statusInfo = { text: h.estado, css: 'bg-slate-100 text-slate-800' };
                if (h.estado === 'HABILITADO') {
                    if (expiryDate < now) {
                        statusInfo = { text: 'Vencida', css: 'bg-red-100 text-red-800' };
                    } else if (expiryDate <= thirtyDaysFromNow) {
                        statusInfo = { text: 'Por Vencer', css: 'bg-yellow-100 text-yellow-800' };
                    } else {
                        statusInfo = { text: 'Activa', css: 'bg-green-100 text-green-800' };
                    }
                } else if (h.estado === 'EN TRAMITE') {
                    statusInfo = { text: 'En Tr√°mite', css: 'bg-blue-100 text-blue-800' };
                }

                const formattedDate = h.vigencia_fin ? expiryDate.toLocaleDateString('es-AR') : 'N/A';

                row.innerHTML = `
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">${h.nro_licencia || 'N/A'}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">${h.titular || 'Sin titular'}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">${h.tipo_transporte || 'N/A'}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">${formattedDate}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${statusInfo.css}">${statusInfo.text}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium relative" x-data="{ open: false }">
                        <button @click="open = !open" @click.away="open = false" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Acciones
                            <svg class="ml-2 -mr-0.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                        </button>
                        <div x-show="open" x-cloak
                             x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100"
                             x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95"
                             class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10">
                            <div class="py-1" role="menu" aria-orientation="vertical">
                                <a href="#" @click.prevent="verCredencial(${h.habilitacion_id})" class="block px-4 py-2 text-sm text-slate-700 hover:bg-slate-100" role="menuitem">Ver Credencial</a>
                                <a href="#" @click.prevent="editarHabilitacion(${h.habilitacion_id})" class="block px-4 py-2 text-sm text-slate-700 hover:bg-slate-100" role="menuitem">Editar</a>
                                <a href="#" @click.prevent="imprimirOblea(${h.habilitacion_id})" class="block px-4 py-2 text-sm text-slate-700 hover:bg-slate-100" role="menuitem">Imprimir Oblea</a>
                                <a href="#" @click.prevent="renovarHabilitacion(${h.habilitacion_id})" class="block px-4 py-2 text-sm text-slate-700 hover:bg-slate-100" role="menuitem">Renovar</a>
                            </div>
                        </div>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        } else {
            tableBody.innerHTML = '<tr><td colspan="6" class="text-center py-10 text-slate-500">No hay habilitaciones que coincidan con el filtro seleccionado.</td></tr>';
        }
    }

    // 2. Funci√≥n para cargar los datos iniciales del dashboard
    function loadDashboardData(dashboard) {
        // Poblar KPIs
        const kpis = dashboard.kpis;
        document.getElementById('kpi_activas').textContent = kpis.activas || 0;
        document.getElementById('kpi_en_tramite').textContent = kpis.en_tramite || 0;
        document.getElementById('kpi_por_vencer').textContent = kpis.por_vencer || 0;
        document.getElementById('kpi_obleas').textContent = kpis.obleas_pendientes || 0;

        // Guardar datos y renderizar tabla inicial
        allHabilitaciones = dashboard.habilitaciones || [];
        renderHabilitaciones('todos');
    }

    // 3. L√≥gica de las solapas (Tabs)
    document.addEventListener('DOMContentLoaded', () => {
        const tabs = {
            todos: document.getElementById('tab-todos'),
            escolar: document.getElementById('tab-escolar'),
            remis: document.getElementById('tab-remis')
        };

        function setActiveTab(selectedTab) {
            Object.values(tabs).forEach(tab => {
                tab.classList.remove('active', 'text-indigo-600');
                tab.classList.add('text-slate-500', 'hover:text-slate-700', 'border-transparent');
            });
            tabs[selectedTab].classList.add('active', 'text-indigo-600');
            tabs[selectedTab].classList.remove('text-slate-500', 'hover:text-slate-700', 'border-transparent');
        }

        tabs.todos.addEventListener('click', () => {
            setActiveTab('todos');
            renderHabilitaciones('todos');
        });

        tabs.escolar.addEventListener('click', () => {
            setActiveTab('escolar');
            renderHabilitaciones('escolar');
        });

        tabs.remis.addEventListener('click', () => {
            setActiveTab('remis');
            renderHabilitaciones('remis');
        });
    });

    // 2. Carga inicial de datos al recibir el evento de login exitoso
    window.electronAPI.onLoginSuccess(({ user, dashboard }) => {
        document.getElementById('nombre_usuario').textContent = user.name || 'Usuario';
        loadDashboardData(dashboard);
    });

    // 3. Manejador del bot√≥n de logout
    document.getElementById('logout-button').addEventListener('click', () => {
        window.electronAPI.logout();
    });

    // --- MANEJADORES DE ACCIONES ---
    function editarHabilitacion(id) {
        window.electronAPI.openEditWindow(id);
    }

    function verDetalles(id) {
        window.electronAPI.openDetailsWindow(id);
    }

    function verCredencial(id) {
        // Usa el manejador gen√©rico para abrir la ventana de la credencial
        window.electronAPI.openWindow(`credencial.html?id=${id}`);
    }

    function imprimirOblea(id) {
        window.electronAPI.printOblea(id);
    }

    async function renovarHabilitacion(id) {
        if (!confirm('¬øEst√° seguro de que desea renovar esta habilitaci√≥n por un a√±o?')) return;

        try {
            const result = await window.electronAPI.renewHabilitation(id);
            if (result.success) {
                alert('¬°Habilitaci√≥n renovada con √©xito!');
                // Recargar los datos del dashboard para reflejar el cambio
                const response = await fetch('https://apis.transportelanus.com.ar/api/dashboard_data.php');
                const freshDashboardData = await response.json();
                if (freshDashboardData.success) {
                    loadDashboardData(freshDashboardData);
                } else {
                    alert('No se pudieron recargar los datos del dashboard.');
                }
            } else {
                alert(`Error al renovar: ${result.message}`);
            }
        } catch (error) {
            console.error('Error en el proceso de renovaci√≥n:', error);
            alert('Ocurri√≥ un error de comunicaci√≥n al intentar renovar.');
        }
    }

    // 4. Manejar el submit del formulario "Nueva Habilitaci√≥n"
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('create-form');
        if (!form) return;

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            // Obtener valores del formulario
            const payload = {
                nro_licencia: document.getElementById('nro_licencia_modal')?.value?.trim(),
                expte: document.getElementById('expte_modal')?.value?.trim(),
                tipo_transporte: document.getElementById('tipo_transporte_modal')?.value,
                resolucion: document.getElementById('resolucion_modal')?.value?.trim(),
                vigencia_inicio: document.getElementById('vigencia_inicio_modal')?.value,
                vigencia_fin: document.getElementById('vigencia_fin_modal')?.value,
                tipo: document.getElementById('tipo_modal')?.value,
                estado: document.getElementById('estado_modal')?.value,
                observaciones: document.getElementById('observaciones_modal')?.value?.trim()
            };

            // Validaci√≥n m√≠nima
            if (!payload.nro_licencia || !payload.expte || !payload.vigencia_inicio || !payload.vigencia_fin || !payload.tipo || !payload.estado || !payload.tipo_transporte) {
                alert('Por favor complete los campos obligatorios.');
                return;
            }

            try {
                // Crear habilitaci√≥n v√≠a IPC/Electron -> API
                const result = await window.electronAPI.createHabilitation(payload);
                if (!result?.success) {
                    alert(`No se pudo registrar la habilitaci√≥n. ${result?.message || ''}`);
                    return;
                }

                // Refrescar dashboard
                try {
                    const resp = await fetch('https://apis.transportelanus.com.ar/api/dashboard_data.php');
                    const data = await resp.json();
                    if (data.success) {
                        loadDashboardData(data);
                    }
                } catch (err) {
                    console.warn('No se pudo recargar el dashboard autom√°ticamente:', err);
                }

                // Cerrar modal
                document.body.__x && (document.body.__x.$data.isCreateModalOpen = false);

                // Abrir detalles con el ID creado
                const newId = result.id || result.habilitacion_id || result.data?.id;
                if (newId) {
                    window.electronAPI.openEditWindow(newId);
                } else {
                    alert('Habilitaci√≥n creada, pero no se recibi√≥ un ID para abrir los detalles.');
                }
            } catch (error) {
                console.error('Error al crear la habilitaci√≥n:', error);
                const errorMessage = error.message || 'Ocurri√≥ un error desconocido.';
                alert(`Error al registrar: ${errorMessage}`);
            }
        });
    });
</script>

